    "text": [
      {
        "english": "Young Elhanan was a shepherd.",
        "hebrew": "אלחנן הצעיר היה רועה צאן."
      },
      {
        "english": "He cared for many sheep.",
        "hebrew": "הוא טיפל בכבשים רבות."
      },
      {
        "english": "One day, a sheep was missing.",
        "hebrew": "יום אחד, כבשה נעלמה."
      },
      {
        "english": "Elhanan left the flock.",
        "hebrew": "אלחנן עזב את העדר."
      },
      {
        "english": "He searched in the mountains.",
        "hebrew": "הוא חיפש בהרים."
      },
      {
        "english": "He shouted loudly",
        "hebrew": "הוא קרא בקול רם."
      },
      {
        "english": "He found the sheep trapped.",
        "hebrew": "הוא מצא את הכבשה לכודה."
      },
      {
        "english": "It was stuck between rocks.",
        "hebrew": "היא הייתה תקועה בין סלעים."
      },
      {
        "english": "He freed the sheep carefully.",
        "hebrew": "הוא שחרר את הכבשה בזהירות."
      },
      {
        "english": "He returned to the flock.",
        "hebrew": "הוא חזר לעדר."
      },
      {
        "english": "Elhanan felt responsible and happy.",
        "hebrew": "אלחנן הרגיש אחראי ושמח."
      },
      {
        "english": "He cared for every sheep.",
        "hebrew": "הוא דאג לכל כבשה."
      },
      {
        "english": "He learned the value of care.",
        "hebrew": "הוא למד את ערך הדאגה."
      },
      {
        "english": "Others admired his dedication.",
        "hebrew": "אחרים העריצו את מסירותו."
      },
      {
        "english": "He became a wise shepherd.",
        "hebrew": "הוא הפך לרועה חכם."
      }
    ]
  },
