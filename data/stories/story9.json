    "text": [
      {
        "english": "Nahum was a famous baker.",
        "hebrew": "נחום היה אופה מפורסם."
      },
      {
        "english": "His bread was delicious.",
        "hebrew": "הלחם שלו היה טעים."
      },
      {
        "english": "People asked for his secret.",
        "hebrew": "אנשים שאלו על סודו."
      },
      {
        "english": "\"Is it a special ingredient?\" they asked.",
        "hebrew": "\"האם זה מרכיב מיוחד?\" הם שאלו."
      },
      {
        "english": "Nahum smiled kindly.",
        "hebrew": "נחום חייך בחביבות."
      },
      {
        "english": "\"I use simple ingredients,\" he said.",
        "hebrew": "\"אני משתמש רק במרכיבים פשוטים,\" הוא אמר."
      },
      {
        "english": "\"The secret is love and care.\"",
        "hebrew": "\"הסוד הוא אהבה ומסירות.\""
      },
      {
        "english": "He kneaded the dough gently.",
        "hebrew": "הוא לש את הבצק בעדינות."
      },
      {
        "english": "He baked with patience.",
        "hebrew": "הוא אפה בסבלנות."
      },
      {
        "english": "His passion made the bread special.",
        "hebrew": "התשוקה שלו הפכה את הלחם למיוחד."
      },
      {
        "english": "People tasted the difference.",
        "hebrew": "אנשים טעמו את ההבדל."
      },
      {
        "english": "They appreciated his work.",
        "hebrew": "הם העריכו את עבודתו."
      },
      {
        "english": "Nahum taught others to bake.",
        "hebrew": "נחום לימד אחרים לאפות."
      },
      {
        "english": "He shared his love for baking.",
        "hebrew": "הוא שיתף את אהבתו לאפייה."
      },
      {
        "english": "The town was grateful to him.",
        "hebrew": "העיר הייתה אסירת תודה לו."
      }
    ]
  },
